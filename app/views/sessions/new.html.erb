<h2 align="center">Login</h2>

<div align="center" class="errors">
  <%= render 'shared/errors', locals: {errors: @errors} if @errors %>
</div>

<div align="center" class="login-form">
  <%= form_tag '/login' do |t| %>
  <p>
    Email: <br>
      <%= text_field_tag :email %><br>
  </p>

  <p>
    Password: <br>
      <%= password_field_tag :password %><br>
  </p>

    <%= submit_tag "Submit" %><br>
  <% end %>
</div>