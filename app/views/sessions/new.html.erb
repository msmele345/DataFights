<h2 align="center">Login</h2>

<div align="center" class="errors">
  <%= render 'shared/errors', locals: {errors: @errors} if @errors %>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_tag '/login' do |f| %>

      Email:
      <%= email_field_tag  :email %>
      Password:
      <%= password_field_tag :password %>

      <%= submit_tag "Sign In", class: " button btn btn-primary" %>
    <% end %>
  </div>
</div>


